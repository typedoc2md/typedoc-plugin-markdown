{
  "private": true,
  "workspaces": [
    "packages/typedoc-plugin-markdown",
    "packages/typedoc-plugin-remark",
    "packages/typedoc-plugin-frontmatter",
    "packages/typedoc-github-wiki-theme",
    "packages/typedoc-gitlab-wiki-theme",
    "packages/typedoc-vitepress-theme",
    "packages/typedoc-docusaurus-theme",
    "packages/docusaurus-plugin-typedoc",
    "devtools/packages/*"
  ],
  "scripts": {
    "docs": "tsx ./devtools/scripts/generate-readmes && node ./devtools/scripts/tocs.mjs",
    "build-all": "pnpm -r --if-present run build",
    "test-all": "pnpm -r --if-present run test",
    "test-and-update-all": "pnpm -r --if-present run test:update",
    "lint-all": "pnpm -r --if-present run lint",
    "prerelease": "npm run build-all",
    "release": "npx changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@devtools/prebuild-options": "workspace:*",
    "@devtools/helpers": "workspace:*",
    "@devtools/testing": "workspace:*",
    "@eslint/js": "^9.32.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "consola": "^3.4.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.32.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest-diff": "^30.0.5",
    "markdownlint": "^0.38.0",
    "mocha": "^11.7.1",
    "p-limit": "^6.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "remark": "^15.0.1",
    "remark-github": "^12.0.0",
    "remark-insert-headings": "^0.0.0",
    "remark-mdx": "^3.1.0",
    "remark-toc": "^9.0.0",
    "to-vfile": "^8.0.0",
    "ts-json-schema-generator": "^2.4.0",
    "ts-morph": "^26.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typedoc": "0.28.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
