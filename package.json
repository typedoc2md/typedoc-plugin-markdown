    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "copyfiles": "^2.4.1",
    "cuid": "^2.1.8",
    "eslint": "^7.25.0",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "tmp": "^0.2.1",
    "ts-jest": "^26.5.5",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  }
}
